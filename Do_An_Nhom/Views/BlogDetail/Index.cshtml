                error1 = $("#error1");
                if ($("#input_name").val() == "") {
                    error1.html("Vui lòng nhập vào tên!");
                    //alert("Chưa nhập tên khách hàng");
                    return;
                }
      
 
                else {
                    $.ajax({
                        type: "POST",
                        url: "/blogdetail/Comment",
                        data: { name: _name, message: _message },
                        success: function (data) {
                            if (data.message) {
                                alert("Bình luận của bạn đã được gửi đi!");
                            }
                            else {
                                alert("Bình luận của bạn chưa được gửi đi!");
