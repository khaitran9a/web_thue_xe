@model IEnumerable<Do_An_Nhom.Models.tblBlog>

@foreach (var item in Model)
{

    <div class="col-lg-4 col-md-6">
        <div class="service-item">
            <a href="/Blog/Index" class="services-item-image"><img style="min-height: 233px;"  src="~/Content/images/Blogs/@item.Image1" class="img-fluid" alt=""></a>

            <div class="down-content">
                <h4><a href="/Blog/Index">@item.Title</a></h4>

                <p style="margin: 0;">@item.tblUser.Name &nbsp;&nbsp;|&nbsp;&nbsp; @item.CreatDate.Value.ToString("MM/dd/yyyy  hh:mm") &nbsp;&nbsp;|&nbsp;&nbsp; 114</p>
            </div>
        </div>
    </div>


}


