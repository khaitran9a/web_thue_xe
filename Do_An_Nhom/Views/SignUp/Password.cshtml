@model Do_An_Nhom.Models.EditPasswordModel

@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .frame-change-pass {
        width: 500px;
        margin: 50px auto;
        padding: 30px;
        background: white;
    }
</style>

<div class="frame-change-pass">
    <h2>Đổi mật khẩu</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h4 style="color:red;">@ViewData["error"]</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-5">Mật khẩu cũ</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PasswordOld, new { @class = "form-control", Type = "password" })
                    @Html.ValidationMessageFor(model => model.PasswordOld, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-5">Mật khẩu mới</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PasswordNew, new { @class = "form-control", Type = "password" })
                    @Html.ValidationMessageFor(model => model.PasswordNew, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-5">Nhập lại mật khẩu</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", Type = "password" })
                    @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-flex col-10">

                <div class="col-9 p-0"> 
                    @Html.ActionLink("Quay lại", "Index", "~", new { @class = "btn btn-primary m-r" })
                </div>

                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" value="Save" class="btn btn-success m-l" />
                </div>


            </div>
        </div>
    }
</div>

